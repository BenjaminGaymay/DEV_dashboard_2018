<div class="container">
        <div class="page-header text-center">
            <h1><span class="fa fa-anchor"></span> Profil Page</h1>
            <a href="/logout" class="btn btn-default btn-sm">Logout</a>
        </div>
        <div class="row">
            <!-- LOCAL INFORMATION -->
            <div class="col-12 col-sm-6 offset-sm-3">
                <div class="well">
                    <h3><span class="fa fa-user"></span> Local</h3>
                    <p>
                        <strong>id</strong>: <%= user._id %><br>
                        <strong>username</strong>: <%= user.local.username %><br>
                        <strong>password</strong>: <%= user.local.password %>
                    </p>
                </div>
                <br>
                <div class="jumbotron">
                        <% if (error.length > 0) { %>
                            <div class="alert alert-danger text-center" role="alert">
                                <%= error %>
                            </div>
                        <% } else if (success.length > 0) { %>
                            <div class="alert alert-success text-center" role="alert">
                                <%= success %>
                            </div>
                        <% } %>
                        <p class="lead">
                            Changer le mot de passe
                        </p>
                        <hr class="my-4">

                    <form method="POST" action="/profile/password">
                        <div class="form-group">
                            <input type="password" class="form-control" id="current-password" name="currentPassword" placeholder="Mot de passe actuel">
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" id="new-password" name="newPassword" placeholder="Nouveau mot de passe">
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" id="confirm-new-password" name="confirmPassword" placeholder="Confirmer nouveau mot de passe">
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>

        </div>

    </div>