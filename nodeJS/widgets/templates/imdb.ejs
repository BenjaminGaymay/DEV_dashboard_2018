<i class="fas fa-cog" id='setting_<%= id %>'></i>
<i class="fas fa-trash-alt" id='delete_<%= id %>'></i>

<form class="form-group" id='widgetSettings_<%= id %>' style='display: none'>
	<input id="input-update-lang_<%= id %>" list="langList" placeholder="Langue ..." value="<%= lang %>">
	<br>
	<input class="form-control" id="input-update-interval_<%= id %>" placeholder="Interval in seconds..." type="number" step="1" min="10" value="<%= interval %>">
	<br>
	<button class="btn btn-action align-text-bottom"> Change configuration </button>
</form>

<div id='widget_<%= id %>'>
	<% for(var i = 0 ; i < films.length ; i++) { %>

		<button type="button" class="btn btn-primary text-center" data-toggle="modal" data-target="#imdb_<%= id %>-<%= films[i].id %>">
			<%= films[i].title %>
		</button>

		<div class="modal fade" id="imdb_<%= id %>-<%= films[i].id %>" tabindex="-1" role="dialog" aria-labelledby="title_<%= id %>-<%= films[i].id %>" aria-hidden="true">
			<div class="modal-dialog" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="title_<%= id %>-<%= films[i].id %>"><%= films[i].title %></h5>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-body text-center">
						<img src="<%= films[i].image %>" style="margin-bottom: 5%;">
						<p style="font-size: 1rem"><%= films[i].description %></p>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
				</div>
			</div>
			</div>
		</div>

	<% } %>

</div>
